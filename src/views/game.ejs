            // }
            // for(int i=0; i<itemName.length; i++){
            //
            // }
            // $('#inventory').text()


        });

    }
    const key = localStorage.getItem('_key');
    if (!key) {
        location.href = "/";
    }

    sendAction("/action", {action: 'query'});



</script>
